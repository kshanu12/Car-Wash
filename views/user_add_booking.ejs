    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">

    
    <style>

        *{
            margin:0;
            padding:0;
        }

        .back{
            /* background-image: url("/background.jpg");
            background-size: 100vw 100vh ;
            opacity: 0.7;
            width: 100vw;
            height: 100vh;
            margin-top: 0!important; */
            padding: 20px;
        }

        .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
      }

      @media (min-width: 768px) {
        .bd-placeholder-img-lg {
          font-size: 3.5rem;
        }
      }

      .b-example-divider {
        height: 3rem;
        background-color: rgba(0, 0, 0, .1);
        border: solid rgba(0, 0, 0, .15);
        border-width: 1px 0;
        box-shadow: inset 0 .5em 1.5em rgba(0, 0, 0, .1), inset 0 .125em .5em rgba(0, 0, 0, .15);
      }

      .b-example-vr {
        flex-shrink: 0;
        width: 1.5rem;
        height: 100vh;
      }

      .bi {
        vertical-align: -.125em;
        fill: currentColor;
      }

      .nav-scroller {
        position: relative;
        z-index: 2;
        height: 2.75rem;
        overflow-y: hidden;
      }

      .nav-scroller .nav {
        display: flex;
        flex-wrap: nowrap;
        padding-bottom: 1rem;
        margin-top: -1px;
        overflow-x: auto;
        text-align: center;
        white-space: nowrap;
        -webkit-overflow-scrolling: touch;
      }

    .mb-3{
        margin-bottom: 0!important;
        /* background-color: #fff7fb; */
        background-color: rgb(236, 255, 255);
    }

    .tags{
        margin:0 20px 0 20px;
        font-weight: bold;
        font-size: large;
    }

    .back{
        display: flex;
    }

    .box{
        background-color: rgb(236, 255, 255);
        width: 40vw;
        height: auto;
        border-radius: 10px;
        padding: 20px 50px 20px 50px;
        margin-top:40px;
        margin-left: 20px;
        text-align: center;
    }
    
    .align{
        margin-bottom: 20px;
        margin-left: 20px;
        display: block;
        height: 35px;
        border-radius: 5px;
    }
    
    .combine{
        display: flex;
    }
    
    .button-align{
        text-align: center;
    }
    
    .hidden_ele{
        display: none;
        margin-top: 20px;
    }
    
    .nhidden_ele{
        margin-top: 20px;
    }
    
    .cost{
        width: 20vw;
        height: 20vh;
        text-align: center;
        margin-left: 20vw;
    }

    .cost_box{
        background-color: rgb(236, 255, 255);
        border-radius: 10px;
        padding: 20px 50px 20px 50px;
        margin-top:40px;
    }

    </style>
</head>
<body onload="myFunction()">
    <header class="p-3 mb-3 border-bottom">
        <div class="container">
            <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
                <img src="/logo1.png" class="bi me-2" width="70" role="img" aria-label="Bootstrap"></svg>
                <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
                    <li><a href="/user/booking/<%=id%>" class="tags nav-link px-2 link-dark">Bookings</a></li>
                    <li><a href="/user/add_booking/<%=id%>" class="tags nav-link px-2 link-secondary">Add Booking</a></li>
                </ul>
                <div class="dropdown text-end">
                    <form action="/user/logout" method="post">
                        <button type="submit" class="btn btn-danger">Log Out</button>
                    </form>
                </div>
            </div>
        </div>
    </header>

    <div class="back">
        <div class="booking">
            <h1>Add Booking </h1>
            <div class="box">
                <form action="/user/add_booking/check_availability/<%=id%>" method="POST">

                    <div class="combine row">
                        <p class="heading col-4" >Cities<span style="color: red;">*</span></p>
                        <select class="align col-6" name="city" id="city" required>
                            <option value="" disabled selected>Select City</option>
                            <%city.forEach((ele)=>{%>
                                <option value="<%=ele.city%>"><%=ele.city%></option>
                            <%});%>
                        </select>
                    </div>

                    <div class="combine row">
                        <p class="heading col-4">Date<span style="color: red;">*</span></p>
                        <input class="align col-6" type="date" name="date" id="date" required>
                    </div>

                    <div class="button-align">
                        <button type="submit" style="margin-top:5px;width:auto" class="btn btn-primary">Check Availability</button>
                    </div>

                <span>
                    <%if(message=="Slots are Available"){%>
                        <span style="color:green"><%=message%></span>
                    <%}else{%>
                            <span style="color:red"><%=message%></span>
                    <%}%>
                </span>

                    <div class=<%=dis%>>
                        <div class="combine row">
                            <p class="heading col-4">Services<span style="color: red;">*</span></p>
                            <select class="align col-6" name="service" id="service">
                                <option value="" disabled selected>Select Service</option>
                                <%services.forEach((ele)=>{%>
                                    <option value="<%=ele.Service_Name%>"><%=ele.Service_Name%></option>
                                <%});%>
                            </select>
                        </div>

                        <div class="combine row">
                            <p class="heading col-4">Veicle Number<span style="color: red;">*</span></p>
                            <input class="align col-6" type="text" class="form-control" name="vehicle_no" id="vehicle_no" placeholder="AB12CD3456" >
                        </div>

                        <div class="button-align">
                            <button formaction="/user/add_booking/<%=id%>" type="submit" style="margin-top:5px;width:100px" class="btn btn-primary">Book</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
        <div class="cost">
            <h1>Cost</h1>
            <div class="cost_box">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Service</th>
                            <th scope="col">Cost</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <%services.forEach((ele,i)=>{%>
                                <tr>
                                    <th scope="row"><%=i+1%></th>
                                    <td><%=ele.Service_Name%></td>
                                    <td><%=ele.Cost%></td>
                                </tr>
                            <%});%>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>


    <script>
        function myFunction() {
            document.getElementById("city").value='<%=selected_city%>';
            console.log("city",'<%=selected_city%>')
            document.getElementById("date").value='<%=selected_date%>';
            console.log("date",'<%=selected_date%>')
        }
    </script>
</body>
</html>